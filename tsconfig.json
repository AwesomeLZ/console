{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "sourceMap": true,
    "importHelpers": true,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/core/*": ["./packages/tkeel-console-core/src/*"],
      "@/business-components/*": [
        "./packages/tkeel-console-business-components/src/*"
      ],
      "@/components/*": ["./packages/tkeel-console-components/src/*"],
      "@/hooks/*": ["./packages/tkeel-console-hooks/src/*"],
      "@/icons/*": ["./packages/tkeel-console-icons/src/*"],
      "@/plugin-example/*": ["./packages/tkeel-console-plugin-example/src/*"],
      "@/plugin-plugins/*": ["./packages/tkeel-console-plugin-plugins/src/*"],
      "@/themes/*": ["./packages/tkeel-console-themes/src/*"],
      "@/types/*": ["./packages/tkeel-console-types/src/*"],
      "@/utils/*": ["./packages/tkeel-console-utils/src/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": ["./packages/*/src/"],
  "exclude": ["**/node_modules/", "**/dist/", "**/scripts/"],
  "references": []
}
